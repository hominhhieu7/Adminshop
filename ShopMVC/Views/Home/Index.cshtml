        <span class="fa fa-angle-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="fa fa-angle-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
