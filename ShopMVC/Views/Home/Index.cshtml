@{
    ViewBag.Title = "Home Page";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script>
    $(document).ready(function() {
        loadproduct();
        loadproduct2();
    });
    function loadproduct() {
        debugger;
        $.ajax({
            url: "/Home/Index_Loadproduct",
            type: "POST",
            data: JSON.stringify(),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function(data) {

                $.each(data, function(k, v) {
                    var html = "";
                    html += "<div class='col-md-3 product-left'>";
                    html += "<div class='product-main simpleCart_shelfItem'>";
                    html += "<a class='mask' href='/Product/Detail_Product?id="+v.ProductID+"'>";
                    html += "<img class='img-responsive zoom-img' src='/Content/CssHome/Images/" + v.images + "'/>";
                    html += "</a>";
                    html += "<div 'class=product-bottom'>";
                    html += "<h3>" + v.ProductName + "</h3>";
                    html += "<p> Mô Tả: " + v.Decriptsion + "</p>";
                    html += "<h4><a class='item_add'><i></i></a> <span class='item_price'>Giá: " + v.PriceProduct + "</span></h4>";
                    html += "</div>";
                    html += "</div>";
                    $(".sanpham").append(html);
                });
            }
        });
    }
    function loadproduct2() {
        $.ajax({
            url: "/Home/Index_Loadproduct2",
            type: "POST",
            data: JSON.stringify(),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {

                $.each(data, function (k, v) {
                    var html = "";
                    html += "<div class='col-md-3 product-left'>";
                    html += "<div class='product-main simpleCart_shelfItem'>";
                    html += "<a class='mask'>";
                    html += "<img class='img-responsive zoom-img' src='/Content/CssHome/Images/" + v.images + "'/>";
                    html += "</a>";
                    html += "<div 'class=product-bottom'>";
                    html += "<h3>" + v.ProductName + "</h3>";
                    html += "<p> Mô Tả: " + v.Decriptsion + "</p>";
                    html += "<h4><a class='item_add'><i></i></a> <span class='item_price'>Giá: " + v.PriceProduct + "</span></h4>";
                    html += "</div>";
                    html += "</div>";
                    $(".sanpham2").append(html);
                });
            }
        });
    }
</script>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
